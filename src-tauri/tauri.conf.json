{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OhMySkills",
  "version": "0.1.3",
  "identifier": "com.oh-my-skills.manager",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "OhMySkills",
        "width": 600,
        "height": 500,
        "resizable": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": true,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: WEI SU (CF686579RY)",
      "entitlements": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
